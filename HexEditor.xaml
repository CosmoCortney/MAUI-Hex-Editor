<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="HexEditor.HexEditor"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HexEditor">

    <Grid ColumnDefinitions="Auto, Auto" RowDefinitions="Auto, Auto">

        <Entry
            x:Name="CurrentOffset"
            Grid.Row="0"
            Grid.Column="0"
            FontFamily="Consolas"
            HeightRequest="20"
            HorizontalTextAlignment="Start"
            MaxLength="16"
            MinimumHeightRequest="20"
            MinimumWidthRequest="70"
            Text="0"
            TextColor="#FFFFFF" />

        <Label
            x:Name="BytesHeader"
            Grid.Row="0"
            Grid.Column="1"
            Margin="12,0,0,0"
            Padding="0"
            FontFamily="Consolas"
            Text="00 01 02 03 04 05 06 07 08 09 0A 0B 0C 0D 0E 0F"
            TextColor="#CCCCFF" />

        <VerticalStackLayout
            x:Name="OffsetList"
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,3,0,0"
            Spacing="-0.375" />


        <Editor
            x:Name="HexEditOriginal"
            Grid.Row="1"
            Grid.Column="1"
            FontFamily="Consolas"
            MaxLength="512"
            TextChanged="onHexEditTextChanged"
            TextTransform="Uppercase">


            <Editor.GestureRecognizers>
                <TapGestureRecognizer Tapped="onEditorTapped" />
            </Editor.GestureRecognizers>
        </Editor>





    </Grid>




</ContentView>