<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="HexEditor.HexEditor"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HexEditor"
    x:Name="hexEditor"
    _BaseAddress="0"
    _IsBigEndian="False"
    _ShowAddressArea="True"
    _ShowTextArea="True">

    <Grid ColumnDefinitions="Auto, Auto, Auto" RowDefinitions="Auto, *">

        <Entry
            x:Name="CurrentOffset"
            Grid.Row="0"
            Grid.Column="0"
            Completed="onEnterPressed"
            FontFamily="Consolas"
            HeightRequest="20"
            HorizontalTextAlignment="Start"
            IsVisible="True"
            MaxLength="16"
            MinimumHeightRequest="20"
            MinimumWidthRequest="70"
            Text="0"
            TextColor="#FFFFFF" />

        <ScrollView
            Grid.Row="1"
            Grid.Column="0"
            HorizontalScrollBarVisibility="Never"
            VerticalOptions="FillAndExpand"
            VerticalScrollBarVisibility="Never">

            <Editor
                x:Name="OffsetList"
                FontFamily="Consolas"
                IsReadOnly="True"
                IsVisible="True"
                MaxLength="512"
                TextColor="#CCCCFF"
                VerticalOptions="FillAndExpand" />
        </ScrollView>

        <Label
            x:Name="BytesHeader"
            Grid.Row="0"
            Grid.Column="1"
            Margin="12,0,0,0"
            Padding="0"
            FontFamily="Consolas"
            IsVisible="True"
            Text="00 01 02 03 04 05 06 07 08 09 0A 0B 0C 0D 0E 0F"
            TextColor="#CCCCFF" />

        <ScrollView
            Grid.Row="1"
            Grid.Column="1"
            HorizontalScrollBarVisibility="Never"
            VerticalOptions="FillAndExpand"
            VerticalScrollBarVisibility="Never">
            <Editor
                x:Name="HexEditorBytes"
                BindingContext="{x:Reference hexEditor}"
                FontFamily="Consolas"
                IsReadOnly="True"
                MaxLength="1537"
                TextChanged="onHexEditTextChanged"
                TextTransform="Uppercase"
                VerticalOptions="FillAndExpand">

                <Editor.Behaviors>
                    <local:HexEditorBehavior />
                </Editor.Behaviors>

                <Editor.GestureRecognizers>
                    <TapGestureRecognizer Tapped="onEditorTapped" />
                </Editor.GestureRecognizers>
            </Editor>
        </ScrollView>

        <Picker
            x:Name="EncodingPicker"
            Grid.Row="0"
            Grid.Column="2"
            FontSize="11"
            HeightRequest="20"
            MinimumHeightRequest="20"
            SelectedIndex="0"
            SelectedIndexChanged="onEncodingPickerIndexChanged"
            SelectedItem="0">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}" />
            </Picker.ItemsSource>
        </Picker>

        <ScrollView
            Grid.Row="1"
            Grid.Column="2"
            HorizontalScrollBarVisibility="Never"
            VerticalOptions="FillAndExpand"
            VerticalScrollBarVisibility="Never">

            <Editor
                x:Name="EncodedStrings"
                FontFamily="Consolas"
                IsReadOnly="True"
                IsVisible="True"
                MaxLength="555"
                VerticalOptions="FillAndExpand" />
        </ScrollView>
    </Grid>

</ContentView>